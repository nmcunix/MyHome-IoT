<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nmcsoftware.myhome_iot.TanksFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p_tank1"
    android:progress="90"
    style="@style/thickerBarStyle1"
    android:minWidth="80dp"
    android:minHeight="120dp"
    android:layout_alignTop="@+id/p_tank2"
    android:layout_alignStart="@+id/textView6" />

<ProgressBar
    style="@style/thickerBarStyle1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p_tank2"
    android:minWidth="80dp"
    android:indeterminateOnly="false"
    android:indeterminate="false"
    android:progress="90"
    android:layout_below="@+id/textView6"
    android:layout_alignEnd="@+id/textView6"
    android:layout_marginTop="38dp"
    android:minHeight="120dp"
    android:max="100" />

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p_tank3"
    android:progress="90"
    android:layout_marginTop="51dp"
    android:minWidth="60dp"
    android:minHeight="80dp"
    style="@style/thickerBarStyle1"
    android:layout_below="@+id/textView2"
    android:layout_alignEnd="@+id/textView2"
    android:max="100" />

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p_tank4"
    android:progress="90"
    android:layout_alignTop="@+id/p_tank3"
    android:layout_alignStart="@+id/p_tank2"
    android:minHeight="80dp"
    style="@style/thickerBarStyle1"
    android:minWidth="60dp"
    android:layout_centerInParent="true"
    android:max="100" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Tank 1"
    android:id="@+id/textView2"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_below="@+id/p_tank1"
    android:layout_alignStart="@+id/p_tank1"
    android:layout_alignEnd="@+id/p_tank1"
    android:layout_marginTop="10dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Tank 2"
    android:id="@+id/textView3"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_above="@+id/p_tank3"
    android:layout_alignStart="@+id/p_tank2"
    android:layout_alignEnd="@+id/p_tank2" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Tank 3"
    android:id="@+id/textView4"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:minWidth="100dp"
    android:layout_alignTop="@+id/textView5"
    android:layout_alignStart="@+id/textView2" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Tank 4"
    android:id="@+id/textView5"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:minWidth="100dp"
    android:layout_below="@+id/p_tank4"
    android:layout_alignEnd="@+id/textView3"
    android:layout_marginTop="10dp"
    android:layout_centerInParent="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Home Water Tank Levels"
    android:id="@+id/textView6"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="0dp" />

</RelativeLayout>
